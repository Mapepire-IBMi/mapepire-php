{
    "name": "ibmi/mapepire-php",
    "description": "mapepire-php is a PHP client for the Mapepire database access layer for Db2 on IBM i.",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Jack Woehr",
            "email": "jwoehr@softwoehr.com"
        },
        {
            "name": "Yeshua Hall",
            "email": "yeshua@sobo.red"
        }
    ],
    "autoload": {
	    "psr-4" : {
            "Mapepire\\": "src/"
        }
    },
    "keywords": ["ibmi", "db2", "database"],
    "require": {
        "php": ">=8.1",
        "amphp/websocket-client": "^2.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "list-test-suites": "phpunit --list-suites"
    }
}
